---
const {buttonText, buttonLink} = Astro.props;
---
<style>
    .button-bg {
        background: #000;
    }
    .button-bg:hover {
        background: #000;
        background: linear-gradient(130deg,rgba(1, 56, 100, 1) 46%, rgba(186, 11, 47, 1) 74%, rgba(255, 164, 0, 1) 92%);
        background-size: 400% 400%;
	    animation: gradient 2s ease infinite;
    }
    @keyframes gradient {
	0% {
		background-position: 0% 50%;
	}
	50% {
		background-position: 100% 50%;
	}
	100% {
		background-position: 0% 50%;
	}
}
</style>
<a class="pb-5" href={buttonLink}>
    <button type="button" class="text-white focus:ring-4 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 button-bg focus:outline-none focus:ring-blue-800">
        {buttonText}
    </button>
</a>